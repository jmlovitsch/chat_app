<%= form_with(model: message, local: true, id: "form", name: "submit_form") do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>
      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :room_id, value: room.id %>
  <div class="input-group">
    <%= form.text_field :content, placeholder: "Enter message here...", class: 'form-control', id:"message-input" %>
    <div class="input-group-append ">
    <div class="actions">
      <%= form.submit label: "Send", name: "submit_button", type: "submit", class: 'btn btn-primary', id: "submit-btn" %>
      </div>
    </div>
  </div>
<% end %>
