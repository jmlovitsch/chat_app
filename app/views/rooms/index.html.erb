<div id="room_id" data-room-id=<%="#{@room.id if @room}"%> ></div>
<div id="user_id" data-user-id=<%="#{current_user.id}"%> ></div>
<div class="container-fluid" id="whole-page">
  <div class="row" >
    <div class="col-3">
      <div class="card mb-1">
        <div class="card-body">
          Logged in as: <br>
          <strong id="username"><%= current_user.username %></strong>
        </div>
      </div>
      <%= render 'form', room: Room.new %>
      <hr>
      <div id="left-bar">
      <% @rooms.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
          <div class="card mb-2 room-card">
            <div key=<%="#{room.id}"%> class="card-body" >
             <span class="room-name"><%= room.name %></span>
             <br>
             <div class="members-details"> <span class="members"><%= room.users.uniq.count %> <%= room.users.uniq.count > 1 ? "Members" : "Member" %></span>
              <div class="hidden-details" >
                <% userArray = [] %>
                <% room.messages.map do |m| %>
                  <% userArray.push(m.user.username) if !userArray.include?(m.user.username)  %>
                <%end%>
                <ol>
                  <% userArray.map do |u| %>
                    <li><%= "#{u}" %></li>
                  <%end%>
                </ol>

              </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
    <div class="col-9" id="right-section">
      <% if @room.present? %>
        <div class="chat-room">
          <div class="card chat-room-card">
            <div class="card-head">
              <nav class="navbar navbar-light bg-light mb-4">
                <span class="navbar-brand mb-0 h1"><%= @room.name %> </span>
                <%= render 'delete', room: @room %>
              </nav>
            </div>
            <div class="card-body">
              <div class="chat-space">
                <div id="messages">
                  <% @room.messages.each do |message| %>
                    <%= render 'messages/message', message: message%>
                    <br>
                  <% end %>
                </div>
              </div>
              <div class="chat-box">
                <%= render 'messages/form', message: Message.new, room: @room %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
