<div class="container-fluid" id="user_id" data-user-id=<%="#{@user.id}"%> >
  <div class="row">
    <div class="col-3">
      <p>Hello, <%= current_user.username %></p>
      <%= render 'form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room do %>
          <div class="card mb-2">
            <div class="card-body">
              <%= room.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light bg-light mb-4">
            <span class="navbar-brand mb-0 h1"><%= @room.name %></span>
          </nav>
          <div class="chat-space">
          <div id="messages">
            <% @room.messages.each do |message| %>

                <%= render 'messages/message', message: message%>

              <br>
            <% end %>
              </div>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
